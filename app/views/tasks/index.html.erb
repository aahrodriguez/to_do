<% @tasks.each do |task| %>
  <%= task.content %>
  <%= "High" if task.priority == 3 %>
  <%= "Normal" if task.priority == 2 %>
  <%= "Low" if task.priority == 1 %>
  <%= link_to "Edit",edit_task_path(task) %>
  <%= link_to "Delete",task_path(task), method: :delete %>
  <br>
<% end %>
